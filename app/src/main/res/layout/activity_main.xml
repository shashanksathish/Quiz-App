        <TextView
            style="@style/Question"
            android:text="@string/triv" />

        <TextView
            style="@style/Question"
            android:text="@string/trivia" />

        <CheckBox
            android:id="@+id/trivia_a1"
            style="@style/Answer"
            android:text="@string/trivia_a1" />

        <CheckBox
            android:id="@+id/trivia_a2"
