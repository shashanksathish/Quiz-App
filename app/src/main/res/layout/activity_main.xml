            <RadioButton
                android:id="@+id/question_3_a3"
                style="@style/Answer"
                android:text="@string/question_3_a3" />
        </RadioGroup>


        <TextView
            style="@style/Question"
            android:text="@string/question_4" />

        <RadioGroup
            android:id="@+id/question4"
