                style="@style/Answer"
                android:text="@string/question_1_a1" />

            <RadioButton
                android:id="@+id/question_1_a2"
                style="@style/Answer"
                android:text="@string/question_1_a2" />

            <RadioButton
                android:id="@+id/question_1_a3"
                style="@style/Answer"
                android:text="@string/question_1_a3" />
        </RadioGroup>

        <TextView
            style="@style/Question"
            android:text="@string/question_2" />

